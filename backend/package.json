{
  "name": "lodle-backend",
  "version": "1.0.0",
  "description": "Backend API for Lodle game",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "db:setup": "ts-node src/scripts/setupDatabase.ts",
    "db:import": "ts-node src/scripts/importData.ts"
  },
  "keywords": ["lodle", "league of legends", "game"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
